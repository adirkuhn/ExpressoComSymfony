<div class="login-page" style="display:none;">
    <div class="login-window" title="{{ "Sign in" | trans }}" style="border-radius:5px;">
        <form action="{{ path("_login_check") }}" method="POST">
            {% if error %}
            <div class="message-login-error">{{ error.message }}</div>
            {% endif %}
            <div style="width:100%">
                <span>{{"User :" | trans}}</span>
                <input type="text" style="width: 100%;" name="_username" value="{{ last_username }}"/>
            </div>
            <div style="width:100%">
                <span>{{"Password :" | trans}}</span>
                <input type="password" style="width: 100%;" name="_password"/>
            </div>
        </form>
    </div>
</div>